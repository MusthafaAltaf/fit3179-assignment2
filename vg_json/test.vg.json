{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total amount of money won by country",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/MusthafaAltaf/fit3179-assignment2/main/vg_json/countries_data.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/MusthafaAltaf/fit3179-assignment2/main/data/Esport_Earnings_country_grouped.csv"
        },
        "key": "Top_Country",
        "fields": ["Top_Country_Earnings"]
      }
    },
    {"calculate": "datum.Top_Country_Earnings + 0.1", "as": "Earnings"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Earnings",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [0, 10000, 100000, 1000000, 10000000, 100000000],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      }
    }
  }
}